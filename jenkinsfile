pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
            
            }
        }
          stage('word') {
            steps {
                e cho ' World'
            
            }
        }
          stage('Hii') {
            steps {
                echo 'Hiii'

            }
        }
        
      
    }
    post{
    success{
     emailext to: 'divyagowda8393@gmail.com',
     body: ' Hii Buddy',
     subject: 'Pipeline is success full'
    }
