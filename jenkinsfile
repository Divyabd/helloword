pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
             
            }
        }
          stage('word') {
            steps {
                echo ' World'
             
            }
        }
          stage('Hii') {
            steps {
                echo 'Hiii'
             mail bcc: '', body: 'success', cc: '', from: '', replyTo: '', subject: 'hii', to: 'divyasow98@gmail.com'
            }
        }
        
      
    }

}


